<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link rel="stylesheet" href="/css/main.css" />

    <style>  
        body {
          font-family: 'Arial', sans-serif;
        }
        form {
            display: grid;
            gap: 15px;
          }
        label {
            font-weight: bold;
            color: #d4d9de; 
        }
        @keyframes fadeIn {
            from {
              opacity: 0;
              transform: translateY(-20px);
            }
            to {
              opacity: 1;
              transform: translateY(0);
            }
        }
        button {
            background-color: rgba(250, 249, 252, 0.632);
            color: #f3f2f5;
            cursor: pointer;
        }
        .container {
          max-width: 800px;
          margin: 0 auto;
          padding: 20px;
          animation: fadeIn 0.5s ease; 
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>

    <div class="container mx-auto">
        <form action"/lego/addSet" method="POST">
            <!-- name setting -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <!-- year setting -->
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" required>

            <!-- number of part setting -->
            <label for="num_parts">Number of parts:</label>
            <input type="number" id="num_parts" name="num_parts" require>

            <!-- img_url setting -->
            <label for="img_url">Image url:</label>
            <input type="url" id="img_url" name="img_url" required>

            <!-- theme id setting -->
            <label for="theme_id">Theme id:</label>
            <select id="theme_id" name="theme_id" required>
                ï‚§<% themes.forEach(theme=>{ %>
                    <option value="<%= theme.id %>">
                      <%= theme.name %>
                    </option>
                  <% }) %>
            </select>

            <!-- number setting -->
            <label for="set_num">Set number:</label>
            <input type="text" id="set_num" name="set_num" required>

            <button type="submit" class="btn btn-primary btn-xs">Submit</button>
        </form>
    </div>
</body>
</html>